# Environment Configuration Template
# Copy this to .env and update with your actual values

# Azure Container Registry
ACR_LOGIN_SERVER=your-acr-name.azurecr.io
ACR_USERNAME=your-acr-username
ACR_PASSWORD=your-acr-password

# Azure SQL Database
SQL_SERVER_NAME=your-sql-server-name
SQL_DATABASE_NAME=taskmanagerdb
SQL_ADMIN_USER=sqladmin
SQL_ADMIN_PASSWORD=your-secure-password
SQL_CONNECTION_STRING=jdbc:sqlserver://your-sql-server-name.database.windows.net:1433;database=taskmanagerdb;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION_MS=86400000

# Azure VM
VM_PUBLIC_IP=your-vm-public-ip
VM_USERNAME=azureuser

# Application Configuration
SPRING_PROFILES_ACTIVE=azure
PORT=8081
FRONTEND_URL=http://localhost:3000

# Database Configuration
SPRING_DATASOURCE_URL=${SQL_CONNECTION_STRING}
SPRING_DATASOURCE_USERNAME=${SQL_ADMIN_USER}
SPRING_DATASOURCE_PASSWORD=${SQL_ADMIN_PASSWORD}
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.SQLServerDialect

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com